<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Operadores"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textCalculadoraMods"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_below="@+id/textCalculadoraMods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel Atual"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textNivelAtual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <Spinner
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textNivelAtual"
        android:id="@+id/spinnerNivelAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_below="@+id/spinnerNivelAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel Desejado"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textNivelDesejado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <Spinner
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textNivelDesejado"
        android:id="@+id/spinnerNivelDesejado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerNivelDesejado"
        android:layout_centerInParent="true"
        android:layout_marginTop="34dp"
        android:text="Calcular" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/resultadoCalculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalcular"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_below="@id/resultadoCalculo"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
